<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow
            android:id="@+id/activity_rank_trow"
            android:layout_width="match_parent"
            android:layout_margin="10dp">
                <TextView
                    android:id="@+id/activity_rank_player_txt"
                    android:text="@string/Player_ranking"
                    android:layout_margin="10dp"/>
                <TextView
                    android:id="@+id/activity_rank_rank_txt"
                    android:text="@string/Rankin_ranking"
                    android:layout_margin="10dp" />
                <TextView
                    android:id="@+id/activity_rank_score_txt"
                    android:text="@string/Score_ranking"
                    android:layout_margin="10dp" />
        </TableRow>
    </TableLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/activity_rank_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="30dp"
            android:text="@string/Back_ranking" />

    </FrameLayout>

</LinearLayout>