<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintRight_toLeftOf="@id/score"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/player"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/player"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/score" />

    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_rank_back_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:padding="30dp"
            android:text="@string/Back_ranking"
            tools:ignore="ButtonStyle,NestedWeights" />

        <Button
            android:id="@+id/activity_rank_valeur_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:padding="30dp"
            android:text="@string/Alphabet_ranking"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/activity_rank_alphabet_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:padding="30dp"
            android:text="@string/Valeur_ranking"
            tools:ignore="ButtonStyle" />

    </LinearLayout>


</LinearLayout>